{
  "name": "rainbowkit",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "prepare": "husky",
    "dev": "pnpm --recursive --parallel --filter @rainbow-me/rainbow* --filter example dev",
    "dev:lib": "pnpm --parallel --filter @rainbow-me/rainbow* dev",
    "dev:example": "pnpm dev:lib & pnpm --filter example dev",
    "dev:site": "pnpm dev:lib & pnpm --filter site dev",
    "dev:cli": "pnpm --filter @rainbow-me/create-rainbowkit dev",
    "dev:template:next-app": "pnpm --filter rainbowkit-next-app dev",
    "build": "pnpm --recursive --parallel --filter=!rainbowkit-next-app build",
    "start": "pnpm dev",
    "lint": "biome lint . && pnpm format:check && pnpm --recursive typecheck",
    "lint:fix": "biome lint . --write && pnpm format:fix",
    "format:check": "biome check .",
    "format:fix": "biome format . --write",
    "link:cli": "cd packages/create-rainbowkit && pnpm link --global",
    "test": "pnpm test:unit",
    "test:unit": "vitest",
    "test:update": "vitest --update",
    "test:watch": "vitest --watch",
    "test:cli": "pnpm --filter @rainbow-me/create-rainbowkit test:build",
    "test:cli:dev": "pnpm --filter @rainbow-me/create-rainbowkit test:dev",
    "test:cli:clean": "rm -rf ./packages/create-rainbowkit/generated-test-app",
    "changeset": "changeset",
    "clean": "rm -rf ./packages/rainbowkit/dist && rm -rf ./packages/rainbowkit-siwe-next-auth/dist && rm -rf ./packages/rainbow-button/dist && rm -rf ./packages/create-rainbowkit/dist && rm -rf ./packages/rainbowkit/node_modules && pnpm install",
    "clean:untracked": "git clean -fxd -e '.env.local' -e '.env' && pnpm install",
    "release": "pnpm release:verify-git && pnpm release:build && changeset publish --tag latest",
    "release:verify-git": "git diff --exit-code && git rev-parse --abbrev-ref HEAD | grep \"main\"",
    "release:build": "pnpm clean && pnpm lint && pnpm test && MINIFY_CSS=true pnpm --recursive --parallel --filter=!rainbowkit-next-app build && cp README.md packages/rainbowkit/README.md",
    "release:test": "pnpm release:build && pnpm --filter example dev",
    "ci:example": "pnpm --filter @rainbow-me/rainbow* prepare && pnpm --filter example build",
    "ci:site": "pnpm --filter @rainbow-me/rainbow* prepare && pnpm --filter site build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rainbow-me/rainbowkit.git"
  },
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "1.8.3",
    "@changesets/cli": "2.27.8",
    "@commitlint/cli": "^19.4.1",
    "@commitlint/config-conventional": "^19.4.1",
    "@tanstack/react-query": "^5.55.3",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^20.14.8",
    "@types/react": "^19.0.6",
    "@types/react-dom": "^19.0.3",
    "@vanilla-extract/esbuild-plugin": "^2.3.10",
    "@vanilla-extract/vite-plugin": "^4.0.15",
    "autoprefixer": "^10.4.16",
    "dotenv": "^16.4.5",
    "esbuild": "^0.25.0",
    "esbuild-plugin-replace": "^1.4.0",
    "husky": "^9.1.5",
    "jsdom": "^25.0.0",
    "next": "^15.2.4",
    "next-auth": "4.24.11",
    "postcss": "^8.4.47",
    "postcss-prefix-selector": "^1.16.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "recursive-readdir-files": "^2.3.1",
    "typescript": "5.5.4",
    "viem": "2.23.12",
    "vite": "^5.4.16",
    "vitest": "2.1.9",
    "wagmi": "^2.14.16"
  },
  "resolutions": {
    "@types/react": "^19.0.6",
    "@types/react-dom": "^19.0.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "elliptic": "6.6.1"
  },
  "packageManager": "pnpm@10.4.1",
  "pnpm": {
    "ignoredBuiltDependencies": [
      "@biomejs/biome",
      "@vercel/speed-insights",
      "bufferutil",
      "contentlayer2",
      "core-js",
      "core-js-pure",
      "keccak",
      "protobufjs",
      "sharp",
      "utf-8-validate"
    ],
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  }
}
