{
  "name": "rainboiwkit",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "postinstall": "husky install",
    "dev": "pnpm dev -r --parallel",
    "start": "pnpm dev",
    "lint": "eslint . --ext=js,mjs,ts,cjs,tsx && pnpm typecheck -r",
    "format": "prettier --check \"./**/*.{ts,js,mjs,cjs,md,tsx}\"",
    "format:fix": "prettier --write \"./**/*.{ts,js,mjs,cjs,md,tsx}\"",
    "test:run": "tsm --experimental-specifier-resolution=node node_modules/uvu/bin.js tests",
    "test:coverage": "c8 --include=packages/*/src pnpm test:run",
    "test:report": "c8 report --reporter=text-lcov > coverage.lcov",
    "test": "pnpm test:coverage && pnpm test:report",
    "chgset:run": "changeset",
    "chgset:version": "changeset version",
    "chgset": "pnpm chgset:run && pnpm chgset:version",
    "release": "changeset publish",
    "prerelease": "pnpm build -r"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rainbow-me/rainbowkit.git"
  },
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@babel/preset-env": "^7.16.4",
    "@babel/preset-react": "^7.16.0",
    "@babel/preset-typescript": "^7.16.0",
    "@babel/register": "^7.16.0",
    "@changesets/cli": "2.18.1",
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@ethersproject/bignumber": "^5.5.0",
    "@testing-library/react-hooks": "^7.0.2",
    "@types/jsdom": "^16.2.13",
    "@types/node": "^16.11.11",
    "@types/react": "^17.0.37",
    "@types/react-dom": "^17.0.11",
    "@typescript-eslint/eslint-plugin": "^5.5.0",
    "@typescript-eslint/parser": "^5.5.0",
    "@vanilla-extract/esbuild-plugin": "^2.0.0",
    "autoprefixer": "^10.4.0",
    "c8": "^7.10.0",
    "esbuild": "^0.14.1",
    "esbuild-node-loader": "^0.6.3",
    "eslint": "^8.3.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.27.1",
    "eslint-plugin-react-hooks": "^4.3.0",
    "fetch-mock": "^9.11.0",
    "husky": "^7.0.4",
    "jsdom": "^18.1.1",
    "next": "^12.0.4",
    "postcss": "^8.4.4",
    "prettier": "^2.5.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "recursive-readdir-files": "^2.0.7",
    "rollup-plugin-filesize": "^9.1.1",
    "tslib": "^2.3.1",
    "tsm": "^2.1.4",
    "typescript": "~4.5.2",
    "uvu": "^0.5.2"
  },
  "dependencies": {
    "@ethersproject/providers": "^5.5.0",
    "@ethersproject/units": "^5.5.0",
    "@walletconnect/client": "^1.6.6",
    "@web3-react/core": "^6.1.9",
    "react-useportal": "^1.0.14"
  }
}
